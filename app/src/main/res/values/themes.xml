<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Color primario y su contraste -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Color secundario y su contraste -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fondo general y superficies -->
        <item name="android:windowBackground">@color/softWhite</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status y navigation bar -->
        <item name="android:statusBarColor">@color/softWhite</item>
        <item name="android:navigationBarColor">@color/softWhite</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
</resources>